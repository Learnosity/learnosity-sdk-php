<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    bootstrap="tests/bootstrap.php"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
>
    <php>
        <ini name="intl.default_locale" value="en"/>
        <ini name="intl.error_level" value="0"/>
        <ini name="memory_limit" value="-1"/>
    </php>
    <logging>
        <log type="coverage-html" target="./tests/coverage" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="./tests/coverage.xml"/>
        <log type="junit" target="./tests/junit.xml" logIncompleteSkipped="false"/>
    </logging>
    <filter>
        <blacklist>
            <directory suffix=".php">./src/latest/vendor/composer/</directory>
        </blacklist>
    </filter>
    <testsuites>
        <testsuite name="Data API Test Suite">
            <directory>./src/latest/tests/</directory>
        </testsuite>
        <testsuite name="Learnosity PHP SDK Test Suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
</phpunit>
